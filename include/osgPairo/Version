#ifndef OSGPAIRO_VERSION
#define OSGPAIRO_VERSION

#include <osgPairo/Export>

extern "C" {

#define OSGPAIRO_MAJOR_VERSION 1
#define OSGPAIRO_MINOR_VERSION 0
#define OSGPAIRO_PATCH_VERSION 0

#define OSGPAIRO_MIN_VERSION_REQUIRED(MAJOR, MINOR, PATCH) ((OSGPAIRO_MAJOR_VERSION>MAJOR) || (OSGPAIRO_MAJOR_VERSION==MAJOR && (OSGPAIRO_MINOR_VERSION>MINOR || (OSGPAIRO_MINOR_VERSION==MINOR && OSGPAIRO_PATCH_VERSION>=PATCH))))
#define OSGPAIRO_VERSION_LESS_THAN(MAJOR, MINOR, PATCH) ((OSGPAIRO_MAJOR_VERSION<MAJOR) || (OSGPAIRO_MAJOR_VERSION==MAJOR && (OSGPAIRO_MINOR_VERSION<MINOR || (OSGPAIRO_MINOR_VERSION==MINOR && OSGPAIRO_PATCH_VERSION<PATCH))))
#define OSGPAIRO_VERSION_LESS_OR_EQUAL(MAJOR, MINOR, PATCH) ((OSGPAIRO_MAJOR_VERSION<MAJOR) || (OSGPAIRO_MAJOR_VERSION==MAJOR && (OSGPAIRO_MINOR_VERSION<MINOR || (OSGPAIRO_MINOR_VERSION==MINOR && OSGPAIRO_PATCH_VERSION<=PATCH))))
#define OSGPAIRO_VERSION_GREATER_THAN(MAJOR, MINOR, PATCH) ((OSGPAIRO_MAJOR_VERSION>MAJOR) || (OSGPAIRO_MAJOR_VERSION==MAJOR && (OSGPAIRO_MINOR_VERSION>MINOR || (OSGPAIRO_MINOR_VERSION==MINOR && OSGPAIRO_PATCH_VERSION>PATCH))))
#define OSGPAIRO_VERSION_GREATER_OR_EQUAL(MAJOR, MINOR, PATCH) ((OSGPAIRO_MAJOR_VERSION>MAJOR) || (OSGPAIRO_MAJOR_VERSION==MAJOR && (OSGPAIRO_MINOR_VERSION>MINOR || (OSGPAIRO_MINOR_VERSION==MINOR && OSGPAIRO_PATCH_VERSION>=PATCH))))

}

#endif

